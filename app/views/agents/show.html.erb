<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h2 class="card-title">Agent Information</h2>
                </div>
                <div class="card-body">
                    <h3 class="mb-3"> <%= @agent.name %> </h3>
                    <p class="mb-1"><strong>Model:</strong> <%= @agent.model %></p>
                    <p class="mb-1"><strong>System Prompt:</strong> <%= @agent.system_prompt %></p>
                    <p class="mb-1"><strong>Temperature:</strong> <%= @agent.temperature %></p>
                    <p class="mb-1"><strong>Top P:</strong> <%= @agent.top_p %></p>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
        </div>
    </div>
</div>